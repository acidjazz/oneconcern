inViewport(delay = 0, speed = 1)
  transition opacity unit(speed, 's') ease-in-out unit(delay, 's')
  &.below-viewport
    opacity 0
  &.above-viewport
    opacity 0.6
  &.in-viewport
    opacity 1

inViewportBottom(delay = 0, speed = 1)
  transition opacity unit(speed, 's') ease-in-out unit(delay, 's'), transform unit(speed, 's') ease-in-out unit(delay, 's')
  &.below-viewport
    opacity 0
    transform translate(0, 20px) 
  &.above-viewport
    opacity 0.6
    transform translate(0, -10px)
  &.in-viewport
    opacity 1
    transform translate(0, 0)

inViewportLeft(delay = 0, speed = 1)
  transition opacity unit(speed, 's') ease-in-out unit(delay, 's'), transform unit(speed, 's') ease-in-out unit(delay, 's')
  &.below-viewport
    opacity 0
    transform translate(-20px, 0px) 
  &.above-viewport
    opacity 0.6
    transform translate(-5, 0px)
  &.in-viewport
    opacity 1
    transform translate(0, 0)

inViewportRight(delay = 0, speed = 1)
  transition opacity unit(speed, 's') ease-in-out unit(delay, 's'), transform unit(speed, 's') ease-in-out unit(delay, 's')
  &.below-viewport
    opacity 0
    transform translate(20px, 0px) 
  &.above-viewport
    opacity 0.6
    transform translate(5, 0px)
  &.in-viewport
    opacity 1
    transform translate(0, 0)

inViewportScale(delay = 0, speed = 1)
  opacity 0
  transform scale(0.95)
  transition opacity unit(speed, 's') ease-in-out unit(delay, 's'), transform unit(speed, 's') ease-in-out unit(delay, 's')
  &.below-viewport
    opacity 0
    transform scale(1.1)
  &.above-viewport
    opacity 0.6
    transform scale(0.95)
  &.in-viewport
    opacity 1
    transform scale(1)

