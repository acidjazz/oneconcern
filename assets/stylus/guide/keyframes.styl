@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@keyframes fadeInTop
  from
    transform translate(0, -20px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes fadeInBottom
  from
    transform translate(0, 20px)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes fadeInLeft
  from
    transform translate(-20px, 0)
    opacity 0
  to
    transform translate(0, 0)
    opacity 1

@keyframes scaleIn
  from
    transform scale(0.9)
    opacity 0
  to
    transform scale(1)
    opacity 1
