@import 'guide/*'

body, html
  margin 0
  padding 0
  background-color blue-charcoal
  overflow-x hidden

body, button, input, select, textarea
  font-s1()

.clear
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie


.pages
  min-height 100vh
.page-enter-active
  transition 0.4s ease-in 
.page-leave-active
  transition 0.4s ease-in 0.2s
.page-enter, .page-leave, .page-leave-to
  opacity 0
  > .hero > .hero-title
    transform translate(-20px, -50%)
    opacity 0

.page-enter, .page-leave
  position absolute

.hero
  width 100vw
  height 100vh
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  position relative
  transition all 0.6s ease
  .hero-title
    color white
    font-h3()
    position absolute
    top 50%
    left 50px
    transform translate(0px, -50%)
    width 780px
    transition all 0.3s ease-in

@media all and (min-width: 1px) and (max-width: 1000px)
  .hero
    .hero-title
      font-h4()
      left 20px
      right 20px
      width auto
